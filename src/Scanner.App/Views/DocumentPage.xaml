<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Scanner.App.Views.DocumentPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Scanner.App.Views">

    <Grid Padding="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Left Panel: Page List with Drag-Drop -->
        <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,12,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Margin="0,0,0,16">
                    <TextBlock Text="Document Pages" Style="{StaticResource SectionTitleStyle}" />
                    <TextBlock Style="{StaticResource CaptionTextBlockStyle}"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                        <Run Text="Drag pages to reorder. " />
                        <Run Text="{x:Bind ViewModel.Document.PageCount, Mode=OneWay}" />
                        <Run Text=" page(s)" />
                    </TextBlock>
                </StackPanel>

                <!-- Page List -->
                <ListView Grid.Row="1"
                          x:Name="PageListView"
                          ItemsSource="{x:Bind ViewModel.Document.Pages, Mode=OneWay}"
                          SelectedItem="{x:Bind ViewModel.SelectedPage, Mode=TwoWay}"
                          CanDragItems="True"
                          CanReorderItems="True"
                          AllowDrop="True"
                          SelectionMode="Single">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="8" CornerRadius="4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!-- Thumbnail -->
                                <Border Background="{ThemeResource LayerFillColorDefaultBrush}"
                                        CornerRadius="4"
                                        Width="80" Height="100">
                                    <FontIcon Glyph="&#xE7C3;" FontSize="28"
                                              Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                </Border>

                                <!-- Page Info -->
                                <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                                    <TextBlock Style="{StaticResource SubtitleTextBlockStyle}">
                                        <Run Text="Page " />
                                        <Run Text="{Binding PageNumber}" />
                                    </TextBlock>
                                    <TextBlock Style="{StaticResource CaptionTextBlockStyle}"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                        <Run Text="{Binding Dpi}" />
                                        <Run Text=" DPI" />
                                    </TextBlock>
                                </StackPanel>

                                <!-- Actions -->
                                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="4">
                                    <Button Style="{StaticResource IconButtonStyle}"
                                            ToolTipService.ToolTip="Rotate">
                                        <FontIcon Glyph="&#xE7AD;" FontSize="14" />
                                    </Button>
                                    <Button Style="{StaticResource IconButtonStyle}"
                                            ToolTipService.ToolTip="Delete"
                                            Foreground="{ThemeResource SystemFillColorCriticalBrush}">
                                        <FontIcon Glyph="&#xE74D;" FontSize="14" />
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!-- Actions -->
                <StackPanel Grid.Row="2" Spacing="8" Margin="0,12,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Button Content="Move Up"
                                HorizontalAlignment="Stretch"
                                Margin="0,0,4,0" />
                        <Button Content="Move Down"
                                Grid.Column="1"
                                HorizontalAlignment="Stretch"
                                Margin="4,0,0,0" />
                    </Grid>
                    <Button Content="Delete Selected"
                            HorizontalAlignment="Stretch" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Right Panel: Selected Page Preview -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Preview -->
            <Border Grid.Row="0"
                    Background="{ThemeResource LayerFillColorDefaultBrush}"
                    CornerRadius="8"
                    Margin="0,0,0,12">
                <Grid>
                    <!-- No Selection Placeholder -->
                    <StackPanel HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Visibility="{x:Bind ViewModel.SelectedPage, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Invert}">
                        <FontIcon Glyph="&#xE7C3;" FontSize="64"
                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                        <TextBlock Text="Select a page to preview"
                                   Style="{StaticResource BodyTextBlockStyle}"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   HorizontalAlignment="Center"
                                   Margin="0,16,0,0" />
                    </StackPanel>

                    <!-- Page Preview -->
                    <ScrollViewer ZoomMode="Enabled"
                                  MinZoomFactor="0.1"
                                  MaxZoomFactor="5"
                                  HorizontalScrollBarVisibility="Auto"
                                  VerticalScrollBarVisibility="Auto">
                        <Image x:Name="PreviewImage"
                               Stretch="Uniform"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" />
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Edit Tools -->
            <Border Grid.Row="1"
                    Style="{StaticResource CardStyle}"
                    Padding="12">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Button ToolTipService.ToolTip="Rotate Left">
                        <FontIcon Glyph="&#xE80F;" FontSize="16" />
                    </Button>
                    <Button ToolTipService.ToolTip="Rotate Right">
                        <FontIcon Glyph="&#xE80C;" FontSize="16" />
                    </Button>
                    <AppBarSeparator />
                    <Button ToolTipService.ToolTip="Crop">
                        <FontIcon Glyph="&#xE7A8;" FontSize="16" />
                    </Button>
                    <Button ToolTipService.ToolTip="Enhance">
                        <FontIcon Glyph="&#xE771;" FontSize="16" />
                    </Button>
                    <AppBarSeparator />
                    <Button ToolTipService.ToolTip="Zoom In">
                        <FontIcon Glyph="&#xE8A3;" FontSize="16" />
                    </Button>
                    <Button ToolTipService.ToolTip="Zoom Out">
                        <FontIcon Glyph="&#xE71F;" FontSize="16" />
                    </Button>
                    <Button ToolTipService.ToolTip="Fit to Window">
                        <FontIcon Glyph="&#xE9A6;" FontSize="16" />
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
